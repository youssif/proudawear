<p id="notice"><%= notice %></p>

<p>
  <b>Picture:</b>
   <% if @post.picture.present? %>
        <%= image_tag @post.picture, width: '80' %>
    <% else %>
    <p>N/A</p>
    <% end %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Description:</b>
  <%= @post.description %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
