<p id="notice"><%= notice %></p>
<div class = "container">
  <center>
    <div class = "post_card">
      <h2 class = "title">
        <%= @post.title %>
      </h2>

      <h4 class = "description">
        <%= @post.description %>
      </h4>

      <% if @post.previous_post %>
        <div class = "previous">
          <%= link_to 'Previous post', @post.previous_post %>
        </div>
      <% end %>

      <p>
         <% if @post.picture.present? %>
              <%= image_tag @post.picture, width: '80' %>
          <% else %>
          <p>N/A</p>
          <% end %>
      </p>

      <% if @post.next_post %>
        <div class = "next">
          <%= link_to 'Next post', @post.next_post %>
        </div>
      <% end %>

      <p class = "username">Posted by <%=@post.name%></p>
    </div>
  </center>


  <center>
    <!-- Shows percentage of upvotes -->
    <%if @post.total_votes > 0 %>
      <div class = "vote_percent">
        <% if @post.upvote_counter > @post.downvote_counter %>
          <h3 class = "wear?"> WEAR IT! </h3>
          <b class="percent_label">Wear Rating: </b>
          <p class="percent"><%= "#{@post.upvote_percent}%" %></p>
        <% else %>
          <h3 class = "wear?"> FAUX PAS! </h3>
          <b class="percent_label">Wear Rating: </b>
          <p class="percent"><%= "#{@post.downvote_percent}%" %></p>
        <% end %>
      </div>
    <% end %>
  </center>


  <!-- Don't want users voting on their own posts -->
  <% if current_user %>
    <% unless @post.name == current_user.name %>
      <center>
        <div class = "vote_card">
          <%= render 'votes/formdownvote' %>
          <%= render 'votes/formupvote' %>
        </div>
      </center>
    <% end %>
  <% end %>

<!-- ******** END Vote Card ********* -->
    <div class="row">
      <div class="large-12 columns">
        <div class="panel">
          <h1><%=@reviews.count %> Total Reviews for <%= @post.name %>'s Post</h1>
        </div>
        <!-- ********* Number of reviews here *******-->
      </div>
    </div>
    <!-- End Header and Nav -->
    <% if current_user && current_user.name != @post.name %>
      <center>
      <div class="row">
         <!-- Nav Sidebar -->
            <!-- This is source ordered to be pulled to the left on larger screens -->
            <% if current_user && current_user.name != @post.name %>
              <center>
                <div class="large-4 columns ">
                  <div class="panel">
                    <!-- Link to plus image tag for current_user -->
                    <%= image_tag current_user.image, width: '80' %>
             <!--        Link to current_user name -->
                    <h5><%= current_user.name %></h5>
                      <center>
                        <div class = "submit_review">
                          <%= render 'reviews/formr' %>
                        </div>
                      </center>      
                  </div>
                </div>
              </center>
              
            <% end %>


            <!-- Main Feed -->
            <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
            <div class="large-8 columns">
                <!-- Feed Entry -->
              <div class = "comment-container">  
                <div class="row">
                  <div class="large-12 columns panel">
                    <% @reviews.each do |review| %>
                      <div class="row">
                        <div class="large-2 columns small-3"><center><%= image_tag review.picture, width: '40' %><p><strong><%= review.name %></strong></p></center></div>
        <!--********* Reviewer who posted something ***** -->
                        <div class="large-10 columns">
        <!-- ********* Review Text here ************* -->
                          <p><%= review.review %></p>
                        </div>
                      </div>
                      <hr />
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- End Feed Entry -->
         
            </div>
        </div>
        </center>
    <% else %>
      <center>
      <div class="row">
            <!-- Main Feed -->
            <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
            <div class="large-14 columns">
                <!-- Feed Entry -->
              <div class = "comment-container">  
                <div class="row">
                  <div class="large-14 columns panel">
                    <% @reviews.each do |review| %>
                      <div class="row">
                        <div class="large-2 columns small-3"><center><%= image_tag review.picture, width: '40' %><p><strong><%= review.name %></strong></p></center></div>
        <!--********* Reviewer who posted something ***** -->
                        <div class="large-10 columns">
        <!-- ********* Review Text here ************* -->
                          <p><%= review.review %></p>
                        </div>
                      </div>
                      <hr />
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- End Feed Entry -->
         
            </div>
      </div>
      </center>

    <%end%>
</div>



