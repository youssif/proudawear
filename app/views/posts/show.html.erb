<p id="notice"><%= notice %></p>
<div class = "container">
  <center>
  <div class='info_container'>
    <div class='row'>
        
      <div class='small-1 columns'>
        <% if @post.previous_post %>
          <%= link_to image_tag('previous_arrow.png', width:'30', class:'previous'), @post.previous_post %>
        <% else %>
          <p>     </p>
        <% end %>
      </div>
      <div class='large-10 columns'>
        <div class="row">
          <center>
          <div class="large-8 columns" id="title">
            <div class='row'>
            <div class='large-8 columns' id="post_description">
            </div>
            </div>
          </div>
          </center>
          <div class='large-2 columns'>
            <center>
            <!-- Shows percentage of upvotes -->
              <%if @post.total_votes > 0 %>
                <div class="vote_percent">
                  <% if @post.upvote_counter > @post.downvote_counter %>
                    <h3 class = "wear?"> WEAR IT! </h3>
                    <b class="percent_label">Wear Rating: </b>
                    <p class="percent"><%= "#{@post.upvote_percent}%" %></p>
                  <% else %>
                    <h3 class = "wear?"> FAUX PAS! </h3>
                    <b class="percent_label">Wear Rating: </b>
                    <p class="percent"><%= "#{@post.downvote_percent}%" %></p>
                  <% end %>
                </div>
              <% end %>
            </center>
          </div>
        </div>
      </div>
      <div class='small-1 columns'>
        <% if @post.next_post %>               
          <%= link_to image_tag('next_arrow.png', width:'30', class:'next'), @post.next_post %>
        <% else %>
          <p>     </p>
        <% end %>
      </div>
    </div>
  </div>
</center>
  
  <center>
    <div class='row' id='vote_container'>
      <center>
      <div class='large-12 columns' id='votes'>  
        <% if current_user %>
          <% unless @post.name == current_user.name %>
            <center>
            <div class='large-8 columns' id="post_photo">
              <h3 class="title" id="post_title">
                <%= @post.title %>
              </h3>
              <p class="username" id="post_username">Posted by <%=@post.name%></p>
              <hr />
              <% if @post.picture.present? %>
                <%= image_tag @post.picture, width: '80', id:'user_post' %>
                <hr />
                <p class="description">
                  <%= @post.description %>
                </p>
              <% else %>
                <p>N/A</p>
                <p class="description">
                  <%= @post.description %>
                </p>
              <% end %>
            </div>
            </center>
            <center>
              <div class="vote_card large-4 columns">
                <%= render 'votes/formupvote' %>
                <%= render 'votes/formdownvote' %>
              </div>
            </center>
          <% else %>
            <center>
            <div id="post_photo">
              <h3 class="title" id="post_title">
                <%= @post.title %>
              </h3>
              <p class="username" id="post_username">Posted by <%=@post.name%></p>
              <hr />
              <% if @post.picture.present? %>
                <%= image_tag @post.picture, width: '80', id:'user_post' %>
                <hr />
                <p class="description">
                  <%= @post.description %>
                </p>
              <% else %>
                <p>N/A</p>
                <hr />
              <% end %>
            </div>
            </center>
          <% end %>
        <% else %>
          <center>
          <div id="post_photo">
            <h3 class="title" id="post_title">
              <%= @post.title %>
            </h3>
            <p class="username" id="post_username">Posted by <%=@post.name%></p>
            <hr />
            <% if @post.picture.present? %>
              <%= image_tag @post.picture, width: '80', id:'user_post' %>
              <hr />
              <p class="description">
                <%= @post.description %>
              </p>
            <% else %>
              <p>N/A</p>
              <hr />
              <p class="description">
                <%= @post.description %>
              </p>
            <% end %>
          </div>
          </center>
        <% end %>
      </div>
      </center>
    </div>

  </center>
          
          
<!-- ******** END Vote Card ********* -->
  <center>
  <div class="comments_container">  
    <div class="row">
      <div class="large-12 columns">
        <div class="panel reviews_title">
          <h1><%=@reviews.count %> Total Reviews for <%= @post.name %>'s Post</h1>
        </div>
        <!-- ********* Number of reviews here *******-->
      </div>
    </div>
    <!-- End Header and Nav -->
    <% if current_user && current_user.name != @post.name %>
      <center>
      <div class="row">
         <!-- Nav Sidebar -->
            <!-- This is source ordered to be pulled to the left on larger screens -->
            <% if current_user && current_user.name != @post.name %>
              <center>
                <div class="large-3 columns">
                  <div class="panel" id="review_postcard">
                    <!-- Link to plus image tag for current_user -->
                    <%= image_tag current_user.image, width: '80' %>
             <!--        Link to current_user name -->
                    <h5><%= current_user.name %></h5>
                      <center>
                        <div class = "submit_review">
                          <%= render 'reviews/formr' %>
                        </div>
                      </center>      
                  </div>
                </div>
              </center>
              
            <% end %>


            <!-- Main Feed -->
            <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
            <div class="large-8 columns">
                <!-- Feed Entry -->
              <div class = "comment-container">  
                <div class="row">
                  <div class="large-13 columns panel">
                    <% @reviews.each do |review| %>
                      <div class="row">
                        <div class="large-2 columns small-3"><center><%= image_tag review.picture, width: '40' %><p><strong><%= review.name %></strong></p></center></div>
        <!--********* Reviewer who posted something ***** -->
                        <div class="large-10 columns" id:"review">
        <!-- ********* Review Text here ************* -->
                          <p id='review'><%= review.review %></p>
                        </div>
                      </div>
                      
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- End Feed Entry -->
         
            </div>
        </div>
        </center>
    <% else %>
      <center>
      <div class="row">
            <!-- Main Feed -->
            <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
            <div class="large-12 columns">
                <!-- Feed Entry -->
              <div class = "comment-container">  
                <div class="row">
                  <div class="large-12 columns panel">
                    <% @reviews.each do |review| %>
                      <div class="row">
                        <div class="large-2 columns small-3"><center><%= image_tag review.picture, width: '40' %><p><strong><%= review.name %></strong></p></center></div>
        <!--********* Reviewer who posted something ***** -->
                        <div class="large-10 columns" id: 'review'>
        <!-- ********* Review Text here ************* -->
                          <p id='review'><%= review.review %></p>
                        </div>
                      </div>
                      <hr />
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- End Feed Entry -->
         
            </div>
      </div>
      </center>

    <%end%>
  </div>
  </center>
</div>



